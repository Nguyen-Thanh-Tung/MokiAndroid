<?xml version="1.0" encoding="utf-8"?>
<com.flipboard.bottomsheet.BottomSheetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomsheet"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <include layout="@layout/nav_bar_custom"/>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="20.0dip"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:paddingTop="20.0dip">

                    <FrameLayout
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10.0dip"
                        android:layout_weight="1.0">

                        <com.coho.moki.ui.custom.SquareImageView
                            android:id="@+id/img1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop" />

                        <com.coho.moki.ui.custom.SquareImageView
                            android:id="@+id/imgPlayVideoIcon"
                            android:layout_width="@dimen/actionbar_height"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/play_video_icon"
                            android:visibility="gone" />
                    </FrameLayout>

                    <com.coho.moki.ui.custom.SquareImageView
                        android:id="@+id/img2"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10.0dip"
                        android:layout_weight="1.0"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_camera_trigger"
                        android:visibility="invisible" />

                    <com.coho.moki.ui.custom.SquareImageView
                        android:id="@+id/img3"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10.0dip"
                        android:layout_weight="1.0"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_camera_trigger"
                        android:visibility="invisible" />

                    <com.coho.moki.ui.custom.SquareImageView
                        android:id="@+id/img4"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_camera_trigger"
                        android:visibility="invisible" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/divider" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common_padding_medium"
                    android:text="@string/product_des"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/gray"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/divider" />

                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/product_name_requirement"
                    android:maxLength="30"
                    android:padding="10.0dip"
                    android:singleLine="true"
                    android:tag="1"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColorHint="@color/gray" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/divider" />

                <EditText
                    android:id="@+id/edtDescription"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center|left|top"
                    android:hint="@string/product_des_requirement"
                    android:minLines="3"
                    android:padding="10.0dip"
                    android:tag="2"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColorHint="@color/gray" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/divider" />

                <LinearLayout
                    android:id="@+id/topContainer"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="@dimen/common_padding_medium"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center_vertical"
                                android:text="@string/free"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="@string/free_sub_text"
                                android:textColor="@color/gray_dark"
                                android:textSize="12.0dip" />
                        </LinearLayout>

                        <com.kyleduo.switchbutton.SwitchButton
                            android:id="@+id/switch_product_type"
                            style="@style/SwitchButtonStyle"
                            android:gravity="right"
                            app:kswAnimationDuration="300"
                            app:kswBackDrawable="@drawable/ios_back_drawable"
                            app:kswThumbRangeRatio="1.5"
                            app:kswThumbDrawable="@drawable/ios_thumb"
                            app:kswThumbMarginBottom="-10.0dip"
                            app:kswThumbMarginLeft="-5.5dip"
                            app:kswThumbMarginRight="-5.5dip"
                            app:kswThumbMarginTop="-3.0dip" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:id="@+id/layout_fast_sell"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="@dimen/common_padding_medium"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="center_vertical"
                                    android:text="@string/auto_accept"
                                    android:textAppearance="?android:textAppearanceSmall"
                                    android:textColor="@android:color/black"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="@string/auto_accept_sub_text"
                                    android:textColor="@color/gray_dark"
                                    android:textSize="12.0dip" />
                            </LinearLayout>

                            <com.kyleduo.switchbutton.SwitchButton
                                android:id="@+id/switch_auto_accept"
                                style="@style/SwitchButtonStyle"
                                android:gravity="right"
                                app:kswAnimationDuration="300"
                                app:kswBackDrawable="@drawable/ios_back_drawable"
                                app:kswThumbRangeRatio="1.5"
                                app:kswThumbDrawable="@drawable/ios_thumb"
                                app:kswThumbMarginBottom="-10.0dip"
                                app:kswThumbMarginLeft="-5.5dip"
                                app:kswThumbMarginRight="-5.5dip"
                                app:kswThumbMarginTop="-3.0dip" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/divider" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_bargain"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0.0dip"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="@dimen/common_padding_medium"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="center_vertical"
                                    android:text="@string/allow_offer"
                                    android:textAppearance="?android:textAppearanceSmall"
                                    android:textColor="@android:color/black"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="@string/allow_offer_sub_text"
                                    android:textColor="@color/gray_dark"
                                    android:textSize="12.0dip" />
                            </LinearLayout>

                            <com.kyleduo.switchbutton.SwitchButton
                                android:id="@+id/switch_allow_offer"
                                style="@style/SwitchButtonStyle"
                                android:gravity="right"
                                app:kswAnimationDuration="300"
                                app:kswBackDrawable="@drawable/ios_back_drawable"
                                app:kswThumbRangeRatio ="1.5"
                                app:kswThumbDrawable="@drawable/ios_thumb"
                                app:kswThumbMarginBottom="-10.0dip"
                                app:kswThumbMarginLeft="-5.5dip"
                                app:kswThumbMarginRight="-5.5dip"
                                app:kswThumbMarginTop="-3.0dip" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/divider" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_padding_medium"
                        android:text="@string/product_detail"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/common_padding_medium"
                            android:drawableLeft="@drawable/category_icon"
                            android:drawablePadding="@dimen/common_padding_small"
                            android:gravity="center_vertical"
                            android:text="@string/category"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:id="@+id/edtCategory"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.0"
                            android:background="@android:color/transparent"
                            android:editable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="right"
                            android:hint="@string/required"
                            android:padding="@dimen/common_padding_medium"
                            android:singleLine="true"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/red_dark"
                            android:textColorHint="@color/gray" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_padding_medium"
                            android:drawableLeft="@drawable/status_product_icon"
                            android:drawablePadding="@dimen/common_padding_small"
                            android:gravity="center_vertical"
                            android:text="@string/status"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:id="@+id/edtStatus"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:background="@android:color/transparent"
                            android:editable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="right"
                            android:hint="@string/required"
                            android:padding="10.0dip"
                            android:singleLine="true"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/red_dark"
                            android:textColorHint="@color/gray" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:id="@+id/llBrand"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_padding_medium"
                                android:drawableLeft="@drawable/brand_icon"
                                android:drawablePadding="5.0dip"
                                android:gravity="center_vertical"
                                android:text="@string/brand"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@android:color/black" />

                            <EditText
                                android:id="@+id/edtBrand"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:background="@android:color/transparent"
                                android:editable="false"
                                android:focusableInTouchMode="false"
                                android:gravity="right"
                                android:padding="@dimen/common_padding_medium"
                                android:singleLine="true"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/red_dark" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/divider" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSize"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_padding_medium"
                                android:drawableLeft="@drawable/size_icon"
                                android:drawablePadding="5.0dip"
                                android:gravity="center_vertical"
                                android:text="@string/size"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@android:color/black" />

                            <EditText
                                android:id="@+id/edtSize"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:background="@android:color/transparent"
                                android:editable="false"
                                android:focusableInTouchMode="false"
                                android:gravity="right"
                                android:padding="@dimen/common_padding_medium"
                                android:singleLine="true"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/red_dark" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/divider" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llWeight"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_padding_medium"
                                android:drawableLeft="@drawable/weight_icon"
                                android:drawablePadding="5.0dip"
                                android:gravity="center_vertical"
                                android:text="@string/weight"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@android:color/black" />

                            <EditText
                                android:id="@+id/edtWeight"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:background="@android:color/transparent"
                                android:editable="false"
                                android:focusableInTouchMode="false"
                                android:gravity="right"
                                android:hint="@string/required"
                                android:padding="@dimen/common_padding_medium"
                                android:singleLine="true"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/red_dark"
                                android:textColorHint="@color/gray" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/divider" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llDimension"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_padding_medium"
                                android:drawableLeft="@drawable/size"
                                android:drawablePadding="5.0dip"
                                android:gravity="center_vertical"
                                android:text="@string/dimens"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@android:color/black" />

                            <EditText
                                android:id="@+id/edtDimension"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:background="@android:color/transparent"
                                android:editable="false"
                                android:focusableInTouchMode="false"
                                android:gravity="right"
                                android:hint="@string/required"
                                android:padding="@dimen/common_padding_medium"
                                android:singleLine="true"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/red_dark"
                                android:textColorHint="@color/gray" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/divider" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common_padding_medium"
                        android:text="@string/transpot"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/titleAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_padding_medium"
                            android:drawableLeft="@drawable/location_icon"
                            android:drawablePadding="@dimen/common_padding_small"
                            android:gravity="center_vertical"
                            android:text="@string/buy_place"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:id="@+id/edtBuyPlace"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:background="@android:color/transparent"
                            android:editable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="right"
                            android:hint="@string/required"
                            android:padding="@dimen/common_padding_medium"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/red_dark"
                            android:textColorHint="@color/gray" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/divider" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottomContainer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:gravity="left"
                            android:padding="@dimen/common_padding_medium"
                            android:text="Giá"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10.0dip"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/product_price"
                            android:drawablePadding="@dimen/common_padding_small"
                            android:gravity="center_vertical"
                            android:text="@string/price_old"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:background="@android:color/transparent"
                            android:gravity="right"
                            android:inputType="number"
                            android:maxLength="9"
                            android:paddingLeft="10.0dip"
                            android:singleLine="true"
                            android:tag="3"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/orange" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/common_padding_medium"
                            android:drawableLeft="@drawable/product_new_price"
                            android:drawablePadding="@dimen/common_padding_small"
                            android:gravity="center_vertical"
                            android:text="@string/price_buy"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:id="@+id/edtBuyPrice"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:background="@android:color/transparent"
                            android:gravity="right"
                            android:hint="@string/price_with_ship"
                            android:inputType="number"
                            android:maxLength="11"
                            android:padding="@dimen/common_padding_medium"
                            android:singleLine="true"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/red_dark"
                            android:textColorHint="@color/gray" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/divider" />

                    <LinearLayout
                        android:id="@+id/productPriceContainer"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="20.0dip"
                            android:background="@color/user_info_bg" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_padding_medium"
                                android:drawableLeft="@drawable/product_commit_price"
                                android:drawablePadding="@dimen/common_padding_small"
                                android:gravity="center_vertical"
                                android:text="@string/service_fee"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@android:color/black" />

                            <TextView
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:gravity="right"
                                android:hint="@string/free_with_beta_version"
                                android:inputType="number"
                                android:padding="@dimen/common_padding_medium"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/orange"
                                android:textColorHint="@color/gray" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/divider" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/common_padding_medium"
                                android:drawableLeft="@drawable/product_price_total"
                                android:drawablePadding="@dimen/common_padding_small"
                                android:gravity="center_vertical"
                                android:text="@string/total_money"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@android:color/black" />

                            <TextView
                                android:id="@+id/txtTotal"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:gravity="right"
                                android:padding="@dimen/common_padding_medium"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/red_dark" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/divider" />
                    </LinearLayout>
                </LinearLayout>

                <com.uncopt.android.widget.text.justify.JustifiedTextView
                    android:id="@+id/txtServiceArticle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common_padding_medium"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/btnAddProduct"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25.0dip"
                    android:layout_marginLeft="25.0dip"
                    android:layout_marginRight="25.0dip"
                    android:background="@drawable/background_red_dark"
                    android:minHeight="0.0dip"
                    android:paddingBottom="10.0dip"
                    android:paddingTop="10.0dip"
                    android:text="Đăng sản phẩm"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/common_text_size_normal" />
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/topKeyboardLayout"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:background="@color/highlight_color"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/preBtnContainer"
                android:layout_width="40.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip">

                <ImageButton
                    android:layout_width="18.0dip"
                    android:layout_height="32.0dip"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent"
                    android:padding="@dimen/common_padding_small"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pre_btn" />

                <ImageButton
                    android:id="@+id/preBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/transparent" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="40.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15.0dip"
                android:layout_toRightOf="@+id/preBtnContainer">

                <ImageButton
                    android:layout_width="18.0dip"
                    android:layout_height="32.0dip"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/common_padding_small"
                    android:background="@color/transparent"
                    android:padding="@dimen/common_padding_small"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sidemenu_next_arrow_pressed" />

                <ImageButton
                    android:id="@+id/nextBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent" />
            </RelativeLayout>

            <TextView
                android:id="@+id/doneBtn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10.0dip"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="@string/complete"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/common_text_size_medium" />
        </RelativeLayout>
    </LinearLayout>
</com.flipboard.bottomsheet.BottomSheetLayout>