<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="240dp"
        android:layout_height="350dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/ava4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ava_4" />

        <ImageView
            android:id="@+id/ava1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="180dp"
            android:src="@drawable/ava_1" />

        <ImageView
            android:id="@+id/deviceImage"
            android:layout_width="155dp"
            android:layout_height="315dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/tutorial_devicebg2" />

        <ScrollView
            android:id="@+id/productImgScroll"
            android:layout_width="135dp"
            android:layout_height="215dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="55dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_product_tut"
                    android:layout_width="135dp"
                    android:layout_height="350dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/tutorial_main_view"/>

            </LinearLayout>


        </ScrollView>



        <ImageView
            android:id="@+id/ava3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/ava_3" />

        <ImageView
            android:id="@+id/ava2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ava_2" />

        <ImageView
            android:id="@+id/ava5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ava_5" />
    </RelativeLayout>

    <!--<com.coho.moki.ui.start_tutorial.Pager-->
    <!--android:id="@+id/scrollView"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="fill_parent" />-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1.5"
        android:layout_marginTop="110dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/second_page_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="45.0dip"
                android:layout_marginLeft="@dimen/common_padding_small"
                android:layout_marginRight="@dimen/common_padding_small"
                android:gravity="center"
                android:maxLines="2"
                android:text="Tiện lợi - Không lo tìm người vận chuyển, thu tiền xác nhận đơn hàng"
                android:textColor="@android:color/black"
                android:textSize="18.0dip"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>