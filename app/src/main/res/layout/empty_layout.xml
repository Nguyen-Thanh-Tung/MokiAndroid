<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emptyLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="@dimen/navi_bar_height"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/negative_double_nav_height">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/emptyImage"
            android:layout_width="@dimen/empty_image_size"
            android:layout_height="@dimen/empty_image_size"
            android:layout_centerInParent="true"
            android:src="@drawable/no_image"
            app:siBorderColor="@color/gray" />

        <TextView
            android:id="@+id/txtNoResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emptyImage"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingTop="@dimen/common_padding_large"
            android:text="@string/text_empty_list"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/common_text_size_medium" />
    </RelativeLayout>
</RelativeLayout>